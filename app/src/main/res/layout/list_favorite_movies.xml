<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/value_100dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="@dimen/value_5dp"
        android:padding="@dimen/value_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/value_16dp">

            <ImageView
                android:id="@+id/favorite_movie_poster"
                style="@style/FavoritePosterStyle"
                android:contentDescription="@string/img_favorite"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/favorite_movie_title"
                style="@style/FavoriteTitleStyle"
                android:layout_width="match_parent"
                tools:text="@string/app_name" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>